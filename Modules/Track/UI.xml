<GuiXml>
    <Controls>
        <TopLevelControl name="BearSynergies_Track_UI" clampedToScreen="true" hidden="true" mouseEnabled="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="200" />
            <Controls>
                <Texture name="$(parent)_Background" color="000000">
                    <Anchor point="TOPELFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
                </Texture>
            </Controls>
            <OnMoveStop>
                BearSynergies.Track.OnMoveStop()
            </OnMoveStop>
        </TopLevelControl>

        <Control name="BearSynergies_Track_Cooldown" hidden="true" virtual="true">
            <Controls>
                <Texture name="$(parent)_Icon" textureFile="esoui/art/icons/ability_undaunted_004.dds">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
                    <Dimensions x="48" y="48" />
                </Texture>
                <Label name="$(parent)_Timer" color="FF0000" font="$(GAMEPAD_MEDIUM_FONT)|29|thick-outline" hidden="true" text="0">
                    <Anchor point="CENTER" relativeTo="$(parent)_Icon" relativePoint="CENTER" />
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>