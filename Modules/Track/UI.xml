<GuiXml>
  <Controls>
    <TopLevelControl name="BearSynergiesTrackUI" mouseEnabled="true" movable="true" clampedToScreen="true" resizeToFitDescendents="true">
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="TOPLEFT" />
      <Controls>
        <Backdrop name="$(parent)Backdrop" centerColor="000000" edgeColor="000000">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
        </Backdrop>
      </Controls>
      <OnMoveStop>
        BearSynergies.Track.OnMoveStop()
      </OnMoveStop>
    </TopLevelControl>

    <Texture name="BearSynergiesTrackIcon" textureFile="esoui/art/icons/ability_undaunted_004.dds" virtual="true">
      <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="5" offsetY="5" />
      <Dimensions x="48" y="48" />
    </Texture>

    <Label name="BearSynergiesTrackTimer" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_26)|thick-outline" color="00FF00" text="0.0" virtual="true">
      <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
    </Label>
  </Controls>
</GuiXml>